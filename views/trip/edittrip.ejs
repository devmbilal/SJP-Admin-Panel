<h1 class="heading">Edit Trip</h1>
<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2"><%= trip.tripName %></h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active"><%=trip.tripName %></li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>Last Updated: <%= new Date(trip.updatedAt).toUTCString() %></b>
      <b>UserId:</b> <%= trip._id %>
    </div>
  </div>
</div>

<form action="/edittrip/<%= trip._id %>?_method=PUT" method="POST">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="StopId">Trip Id</label>
      <input
        type="text"
        class="form-control"
        id="tripid"
        name="tripId"
        value="<%= trip.tripId %>"
        placeholder="Trip Id"
        required
      />
    </div>
    <div class="col">
      <label for="Name">Name</label>
      <input
        type="text"
        class="form-control"
        id="tripName"
        name="tripName"
        value="<%= trip.tripName %>"
        placeholder="Name"
        required
      />
    </div>

    <div class="col">
      <label for="TripHead">Trip Head</label>
      <input
        type="text"
        class="form-control"
        id="tripHead"
        name="tripHead"
        value="<%= trip.tripHead %>"
        placeholder="Trip Head"
        required
      />
    </div>

    <div class="col">
      <label for="ServiceId">Service Id</label>
      <input
        type="text"
        class="form-control"
        id="serviceId"
        name="serviceId"
        value="<%= trip.serviceId %>"
        placeholder="Service Id"
        required
      />
    </div>

    <div class="container">
      <label for="tripDropdown">Select a Sequence:</label>
      <select class="form-select" id="tripDropdown" name="tripDropdown">
        <% routes.forEach(route => { %>
        <option value="<%= route._id %>"><%= route.routeName %></option>
        <% }); %>
      </select>
    </div>
    <div class="col">
      <label for="VehicleId">Vehicle Id</label>
      <input
        type="text"
        class="form-control"
        id="vehicleId"
        name="vehicleId"
        value="<%= trip.vehicleId %>"
        placeholder="Vehicle Id"
        required
      />
    </div>
    <div class="col">
      <label for="DepartureTime">Departure Time</label>
      <input
        type="time"
        class="form-control"
        id="departureTime"
        name="departureTime"
        value="<%= trip.departureTime %>"
        placeholder="Departure Time"
        required
        step="60"
        pattern="(0[0-9]|1[0-2]):[0-5][0-9] [APMapm]{2}"
      />
    </div>

    <div class="col">
      <label for="ArrivalTime">Arrival Time</label>
      <input
        type="time"
        class="form-control"
        id="arrivalTime"
        name="arrivalTime"
        value="<%= trip.arrivalTime %>"
        placeholder="Arrival Time"
        required
        step="60"
        pattern="(0[0-9]|1[0-2]):[0-5][0-9] [APMapm]{2}"
      />
    </div>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Update Trip</button>

    <button
      type="button"
      class="btn btn-danger"
      data-bs-toggle="modal"
      id="deleteButton"
      data-bs-target="#deleteModal"
    >
      Delete Trip
    </button>
  </div>
</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">You are about to remove a trip.</div>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>
          This will remove the trip
          <b class="fw-bold"><%= trip.tripName %> </b><br />
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <form
          action="/edittrip/<%= trip._id %>?_method=DELETE"
          method="POST"
          class="position-relative"
        >
          <button type="submit" class="btn btn-primary">
            Yes, Remove Trip
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
