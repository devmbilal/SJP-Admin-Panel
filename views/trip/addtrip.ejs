<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Trip</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active">New Trip</li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>TripId</b>
    </div>
  </div>
</div>

<form action="/addtrip" method="POST">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="TripId">Trip Id</label>
      <input
        type="text"
        class="form-control"
        id="tripid"
        name="tripId"
        value=""
        placeholder="Trip Id"
        required
      />
    </div>
    <div class="col">
      <label for="Name">Name</label>
      <input
        type="text"
        class="form-control"
        id="tripName"
        name="tripName"
        value=""
        placeholder="Name"
        required
      />
    </div>

    <div class="col">
      <label for="TripHead">Trip Head</label>
      <input
        type="text"
        class="form-control"
        id="tripHead"
        name="tripHead"
        value=""
        placeholder="Trip Head"
        required
      />
    </div>
    <div class="col">
      <label for="ServiceId">Service Id</label>
      <input
        type="text"
        class="form-control"
        id="serviceId"
        name="serviceId"
        value=""
        placeholder="Service Id"
        required
      />
    </div>

    <div class="container">
      <label for="tripDropdown">Select a Sequence:</label>
      <select class="form-select" id="tripDropdown" name="tripDropdown">
        <% routes.forEach(route => { %>
        <option value="<%= route._id %>"><%= route.routeName %></option>
        <% }); %>
      </select>
    </div>
    <div class="col">
      <label for="VehicleId">Vehicle Id</label>
      <input
        type="text"
        class="form-control"
        id="vehicleId"
        name="vehicleId"
        value=""
        placeholder="Vehicle Id"
        required
      />
    </div>
    <div class="col">
      <label for="Arrival Time">Arrival Time</label>
      <input
        type="time"
        class="form-control"
        id="arrivalTime"
        name="arrivalTime"
        value=""
        placeholder="Arrival Time"
        required
      />
    </div>
    <div class="col">
      <label for="DepartureTime">Departure Time</label>
      <input
        type="time"
        class="form-control"
        id="departureTime"
        name="departureTime"
        value=""
        placeholder="Departure Time"
        required
      />
    </div>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Add Trip</button>
  </div>
</form>
