<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Stops</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <a href="/addstop" class="btn btn-sm btn-outline-secondary">+ New Stop</a>
    </div>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Latitude</th>
        <th scope="col">Longitude</th>
        <th scope="col" class="text-end">Action</th>
      </tr>
    </thead>

    <tbody>
      <% stops.forEach(element => { %>
      <tr class="align-middle">
        <td><%= element.stopName %></td>
        <td><%= element.latitude%></td>
        <td><%= element.longitude %></td>
        <td class="text-end">
          <div class="d-flex flex-row justify-content-end gap-2">
            <a
              href="/viewstop/<%= element._id %>"
              type="button"
              class="btn btn-primary btn-small"
            >
              <i class="bi bi-eye"></i>
            </a>

            <a
              href="/editstop/<%= element._id %>"
              type="button"
              class="btn btn-warning btn-small"
            >
              <i class="bi bi-pencil"></i>
            </a>

            <form
              action="/editstop/<%= element._id %>?_method=DELETE"
              method="POST"
              class="position-relative"
            >
              <button type="submit" class="btn btn-danger btn-small">
                <i class="bi bi-person-x"></i>
              </button>
            </form>
          </div>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<% if (stops.length > 0) { %>
<nav aria-label="Dashboard Pagination">
  <ul class="pagination justify-content-center mt-5">
    <% if (current == 1) { %>
    <li class="page-item disabled"><a href="#" class="page-link">First</a></li>
    <% } else { %>
    <li class="page-item">
      <a href="/stops?page=1" class="page-link">First</a>
    </li>
    <% } %> <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %> <%
    if(i !== 1) { %>
    <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
    <% } %> <% for(; i <= (Number(current) + 4) && i <= pages; i++ ) { %> <% if
    (i == current) { %>
    <li class="page-item disabled">
      <a href="#" class="page-link"><%= i %></a>
    </li>
    <% } else { %>
    <li class="page-item">
      <a href="/stops?page=<%= i %>" class="page-link"><%= i %></a>
    </li>
    <% } %> <% if (i == Number(current) + 4 && i < pages) { %>
    <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
    <% } %> <% } %> <% if (current == pages) { %>
    <li class="page-item disabled"><a href="#" class="page-link">Last</a></li>
    <% } else { %>
    <li class="page-item">
      <a href="/stops?page=<%= pages %>" class="page-link">Last</a>
    </li>
    <% } %>
  </ul>
</nav>
<% } %>
