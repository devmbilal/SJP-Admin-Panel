<h1 class="heading">Edit Stop</h1>
<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2"><%= stop.stopName %></h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active"><%=stop.stopName %></li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>Last Updated: <%= new Date(stop.updatedAt).toUTCString() %></b>
      <b>UserId:</b> <%= stop._id %>
    </div>
  </div>
</div>

<form action="/editstop/<%= stop._id %>?_method=PUT" method="POST">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="Name">Name</label>
      <input
        type="text"
        class="form-control"
        id="stopName"
        name="stopName"
        value="<%= stop.stopName %>"
        placeholder="Name"
        required
      />
    </div>

    <div class="col">
      <label for="Longitude">Longitude</label>
      <input
        type="number"
        class="form-control"
        id="longitude"
        name="longitude"
        value="<%= stop.longitude %>"
        placeholder="Longitude"
        required
      />
    </div>

    <div class="row form-group mb-4">
      <div class="col">
        <label for="Latitude">Latitude</label>
        <input
          type="number"
          class="form-control"
          id="latitude"
          name="latitude"
          value="<%= stop.latitude%>"
          placeholder="Latitude"
          required
        />
      </div>
    </div>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Update Stop</button>

    <button
      type="button"
      class="btn btn-danger"
      data-bs-toggle="modal"
      id="deleteButton"
      data-bs-target="#deleteModal"
    >
      Delete Stop
    </button>
  </div>
</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">You are about to remove a stop.</div>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>
          This will remove the stop
          <b class="fw-bold"><%= stop.stopName %> </b><br />
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <form
          action="/editstop/<%= stop._id %>?_method=DELETE"
          method="POST"
          class="position-relative"
        >
          <button type="submit" class="btn btn-primary">
            Yes, Remove Stop
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
