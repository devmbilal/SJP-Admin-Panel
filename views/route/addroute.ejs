<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Route</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active">New Route</li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>RouteId</b>
    </div>
  </div>
</div>

<form action="/addroute" method="POST">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="Name">Name</label>
      <input
        type="text"
        class="form-control"
        id="routeName"
        name="routeName"
        value=""
        placeholder="Route Name"
        required
      />
    </div>

    <div class="col">
      <label for="status">Status</label>
      <select class="form-select" id="status" name="status" required>
        <option value="true">Yes</option>
        <option value="false">No</option>
      </select>
    </div>

    <div class="container">
      <label for="stopDropdown">Select a Sequence:</label>
      <select class="form-select" id="seqDropdown" name="seqDropdown">
        <% sequences.forEach(sequence => { %>
        <option value="<%= sequence._id %>"><%= sequence.seqName %></option>
        <% }); %>
      </select>
    </div>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Add Route</button>
  </div>
</form>
